{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "playwright.config.js",
    "_playwright-tests/**/*.ts"
  ],
  "exclude": [
    ".cache",
    ".auth", 
    "node_modules",
    "dist",
    "test-results",
  ],
  "watchOptions": {
    "excludeDirectories": [
      ".cache",
      ".auth", 
      "node_modules",
      "dist",
      "test-results",
  ]}
}
